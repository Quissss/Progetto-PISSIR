@page
@model Progetto.App.Pages.DashPaymentModel
@{
    ViewData["Title"] = "Payment Report";
}

<h2><i class="fas fa-money-check-alt"></i> <strong>@ViewData["Title"]</strong></h2>

<div class="container-fluid">
    <div class="row">
        <partial name="_DashboardPartial" />

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <!-- Filter Form -->
            <div class="card mb-4 shadow-sm border-primary">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0"><strong>Filter Payments</strong></h3>
                    <i class="fas fa-filter"></i>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-row">
                            <div class="row">
                                <div class="form-group col-md-4 mb-3">
                                    <label for="startDate">Start Date</label>
                                    <input type="datetime-local" id="startDate" asp-for="StartDate" class="form-control" />
                                </div>
                                <div class="form-group col-md-4 mb-3">
                                    <label for="endDate">End Date</label>
                                    <input type="datetime-local" id="endDate" asp-for="EndDate" class="form-control" />
                                </div>
                                <div class="form-group col-md-4 mb-3">
                                    <label for="chargeType">Charge Type</label>
                                    <select id="chargeType" asp-for="ChargeType" class="form-control">
                                        <option value="">All</option>
                                        <option value="true">Charge</option>
                                        <option value="false">Stop</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary btn-block col-6"><i class="fas fa-search"></i> Filter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Payment Report Table -->
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0"><strong>Payment Report</strong></h3>
                    <i class="fas fa-file-invoice-dollar"></i>
                </div>
                <div class="card-body">
                    @if (Model.Payments.Any())
                    {
                        <table class="table table-striped table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">User ID</th>
                                    <th scope="col">Car Plate</th>
                                    <th scope="col">Total Cost</th>
                                    <th scope="col">Energy Consumed</th>
                                    <th scope="col">Start Time</th>
                                    <th scope="col">End Time</th>
                                    <th scope="col">Type</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.Payments)
                                {
                                    <tr>
                                        <td>@payment.UserId</td>
                                        <td>@payment.CarPlate</td>
                                        <td>@payment.TotalCost.ToString("C")</td>
                                        <td>@payment.EnergyConsumed?.ToString("N2")</td>
                                        <td>@payment.StartTime.ToString("g")</td>
                                        <td>@payment.EndTime.ToString("g")</td>
                                        <td>@(payment.IsCharge ? "Charge" : "Stop")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i> No payments found for the selected filters.
                        </div>
                    }
                </div>
            </div>
        </main>
    </div>
</div>
